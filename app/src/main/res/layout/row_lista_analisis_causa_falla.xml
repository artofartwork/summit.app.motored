<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:clickable="true"
    android:layout_margin="8dp"
    android:background="?android:attr/selectableItemBackground">

    <LinearLayout
        android:background="@drawable/button_motored"
        android:textColor="#ffffff"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#ffffff"
                android:id="@+id/sistemafalla"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="SIST FALLA"/>

            <TextView
                android:textColor="#ffffff"
                android:id="@+id/nrocaso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                tools:text="8974" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#ffffff"
                android:id="@+id/modofalla"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="FALLA MOD"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <CheckBox
                android:textColor="#ffffff"
                android:enabled="false"
                android:id="@+id/scanner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scanner"/>

            <CheckBox
                android:textColor="#ffffff"
                android:enabled="false"
                android:id="@+id/muestraceite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Muest. Aceite"/>

            <CheckBox
                android:id="@+id/muestracombustible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="Muest. Combustib"
                android:textColor="#ffffff" />




        </LinearLayout>



    </LinearLayout>

</android.support.v7.widget.CardView>

